{
    "type": "APL",
    "version": "1.0",
    "theme": "dark",
    "import": [
        {
            "name": "alexa-layouts",
            "version": "1.0.0"
        }
    ],
    "styles": {
        "textStyleBase": {
            "description": "Base font description; set color and core font family",
            "values": [
                {
                    "color": "@colorTextPrimary",
                    "fontFamily": "Amazon Ember Display"
                }
            ]
        },
        "textStyleBase0": {
            "description": "Thin version of basic font",
            "extend": "textStyleBase",
            "values": {
                "fontWeight": "100"
            }
        },
        "textStyleBase1": {
            "description": "Light version of basic font",
            "extend": "textStyleBase",
            "values": {
                "fontWeight": "300"
            }
        },
        "mixinBody": {
            "values": {
                "fontSize": "@textSizeBody"
            }
        },
        "mixinPrimary": {
            "values": {
                "fontSize": "@textSizePrimary"
            }
        },
        "mixinSecondary": {
            "values": {
                "fontSize": "@textSizeSecondary"
            }
        },
        "textStylePrimary": {
            "extend": [
                "textStyleBase1",
                "mixinPrimary"
            ]
        },
        "textStyleSecondary": {
            "extend": [
                "textStyleBase0",
                "mixinSecondary"
            ]
        },
        "textStyleBody": {
            "extend": [
                "textStyleBase1",
                "mixinBody"
            ]
        },
        "textStyleSecondaryHint": {
            "values": {
                "fontFamily": "Bookerly",
                "fontStyle": "italic",
                "fontSize": "@textSizeSecondaryHint",
                "color": "@colorTextPrimary"
            }
        }
    },
    "resources": [
        {
            "description": "Stock color for the light theme",
            "colors": {
                "colorTextPrimary": "#151920"
            }
        },
        {
            "description": "Stock color for the dark theme",
            "when": "${viewport.theme == 'dark'}",
            "colors": {
                "colorTextPrimary": "#f0f1ef"
            }
        },
        {
            "description": "Standard font sizes",
            "dimensions": {
                "textSizeBody": 34,
                "textSizePrimary": 26,
                "textSizeSecondary": 23,
                "textSizeSecondaryHint": 25
            }
        },
        {
            "description": "Common spacing values",
            "dimensions": {
                "spacingThin": 6,
                "spacingSmall": 12,
                "spacingMedium": 24,
                "spacingLarge": 48,
                "spacingExtraLarge": 72
            }
        },
        {
            "description": "Common margins and padding",
            "dimensions": {
                "marginTop": 40,
                "marginLeft": 60,
                "marginRight": 60,
                "marginBottom": 40
            }
        }
    ],
    "layouts": {},
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "items": [
            {
                "when": "${viewport.shape == 'round'}",
                "type": "Container",
                "direction": "column",
                "width": "100vw",
                "height": "100vh",
                "items": [
                    {
                        "when": "${viewport.shape == 'round'}",
                        "type": "Container",
                        "direction": "row",
                        "width": "100vw",
                        "height": "100vh",
                        "items": [
                            {
                                "type": "Image",
                                "source": "${payload.bodyTemplate2Data.image.sources[0].url}",
                                "scale": "best-fill",
                                "width": "100vw",
                                "height": "100vh",
                                "position": "absolute",
                                "overlayColor": "rgba(0, 0, 0, 0.6)",
                                "item": {
                                    "type": "Container"
                                }
                            },
                            {
                                "type": "ScrollView",
                                "width": "100vw",
                                "height": "100vh",
                                "paddingTop": "90px",
                                "item": [
                                    {
                                        "type": "Container",
                                        "direction": "column",
                                        "alignItems": "center",
                                        "paddingLeft": "10dp",
                                        "items": [
                                            {
                                                "type": "Text",
                                                "text": "<b>${payload.bodyTemplate2Data.textContent.title.text}</b>",
                                                "style": "textStyleBody",
                                                "width": "70vw",
                                                "textAlign": "center"
                                            },
                                            {
                                                "type": "Text",
                                                "text": "<b>${payload.bodyTemplate2Data.textContent.primaryText.text}</b>",
                                                "paddingTop": 10,
                                                "width": "70vw",
                                                "style": "textStylePrimary",
                                                "textAlign": "center"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "type": "Container",
                "width": "100vw",
                "height": "100vh",
                "overlayColor": "#ffffff",
                "items": [
                    {
                        "type": "Image",
                        "position": "absolute",
                        "top": 0,
                        "left": 0,
                        "source": "${payload.bodyTemplate2Data.backgroundImage.sources[0].url}",
                        "width": "100vw",
                        "height": "100vh",
                        "scale": "best-fill"
                    },
                    {
                        "type": "AlexaHeader",
                        "headerTitle": "${payload.bodyTemplate2Data.title}",
                        "headerAttributionImage": "${payload.bodyTemplate2Data.logoUrl}"
                    },
                    {
                        "type": "Container",
                        "direction": "row",
                        "paddingLeft": "30dp",
                        "paddingRight": "30dp",
                        "grow": 1,
                        "shrink": 1,
                        "height": "100vh",
                        "items": [
                            {
                                "type": "Image",
                                "source": "${payload.bodyTemplate2Data.image.sources[1].url}",
                                "height": "100%",
                                "width": "100%",
                                "grow": 10,
                                "shrink": 1,
                                "scale": "best-fit",
                                "align": "top"
                            },
                            {
                                "type": "ScrollView",
                                "scrollDirection": "vertical",
                                "height": "100%",
                                "grow": 2,
                                "shrink": 2,
                                "item": [
                                    {
                                        "type": "Container",
                                        "paddingLeft": "20dp",
                                        "items": [
                                            {
                                                "type": "Text",
                                                "text": "<b>${payload.bodyTemplate2Data.textContent.title.text}</b>",
                                                "style": "textStyleBody",
                                                "color": "white"
                                            },
                                            {
                                                "type": "Text",
                                                "text": "${payload.bodyTemplate2Data.textContent.primaryText.text}",
                                                "spacing": "@spacingSmall",
                                                "style": "textStylePrimary",
                                                "color": "white"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "type": "AlexaFooter",
                        "footerHint": "${payload.bodyTemplate2Data.hintText}",
                        "color": "black"
                    }
                ]
            }
        ]
    }
}
